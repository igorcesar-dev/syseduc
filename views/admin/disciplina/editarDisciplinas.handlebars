<!-- EDIÇÃO -->
{{#each disciplinas}}

<!-- CADASTRO -->
<div class="cadastro">
    <form action="/disciplinas/editdisciplinas/{{dataValues.id}}" method="post">
        <h1 class="title-cadastro">Editar Disciplina</h1>
        <div class="card">
            <div class="card-body">
                <h2 class="title-2">Informações da Disciplina: {{dataValues.nome}}</h2>
            </div>
        </div>
        <small class="obrigatorio2 obrigatorio">(*) Campos obrigatórios</small>
        <div class="div-info">
            <div class="grid-info">

                {{!-- Nome --}}
                <p class="nome-completo">
                    <label class="nome-label" for="nome_cad">Nome: <small class="obrigatorio">
                            *</small></label>
                    <input class="nome-input" id="nome" name="nome" required
                        oninvalid="this.setCustomValidity('Preencha todos os campos obrigatórios!')"
                        onchange="try{setCustomValidity('')}catch(e){}" type="text" autocomplete="off"
                        value="{{dataValues.nome}}" />
                </p>


                {{!-- ministrante --}}
                <p class="">
                    <label class="turma-label" for="turma">Ministrante: <small class="obrigatorio">
                            *</small></label>
                    <br>
                    <input type="text" value="{{dataValues.ministrante}}" disabled="">
                    <select class="turma-input" name="ministrante" id="ministrante" required
                        oninvalid="setCustomValidity('Preencha todos os campos obrigatórios!')">
                        {{/each}}
                        <option value="{{dataValues.ministrante}}">Escolha outro ministrante:</option>

                        {{#each educadores}}
                        <option value="{{dataValues.nome}}">{{dataValues.nome}}</option>
                        {{/each}}
                    </select>
                </p>
                {{#each disciplinas}}


                {{!-- horario --}}
                <p class="">
                    <label class="" for="horario">Carga Horária:<small class="obrigatorio">
                            *</small></label>
                    <input class="" id="horario" name="horario" value="{{dataValues.horario}}" required
                        oninvalid="this.setCustomValidity('Preencha todos os campos obrigatórios!')"
                        onchange="try{setCustomValidity('')}catch(e){}" type="text" autocomplete="off" />
                </p>

                {{!-- semestre --}}
                <p>
                    <label for="semestre">Semestre:<small class="obrigatorio"> *</small></label>
                    <input id="semestre" name="semestre" value="{{dataValues.semestre}}" required
                        oninvalid="this.setCustomValidity('Preencha todos os campos obrigatórios!')"
                        onchange="try{setCustomValidity('')}catch(e){}" type="text" autocomplete="off" />
                </p>
            </div>
        </div>
        {{/each}}

        <input class="btn btn-secondary btn-cadastrar-submit" style="border: none; background-color: #0c7c59;"
            type="submit" value="Salvar" />
    </form>
</div>