            <p class="cpf-aluno">
                <label class="cpf-aluno" for="cpf">CPF:</label>
                <input class="nome-input" id="cpf" name="cpf" required type="text" placeholder="Insira o CPF" />
            </p>

            <p class="data-nascimento">
                <label class="data-aluno" for="nome_cad">Nascimento:</label>
                <input class="nome-input" id="nascimento" name="nascimento" required type="text" />
            </p>

            <p class="matricula">
                <label class="nome-label" for="nome_cad">Nº Matrícula:</label>
                <input class="nome-input" id="matricula" name="matricula" required type="number" placeholder="" />
            </p>

            <p>
                <label for="email">E-mail:</label>
                <input id="email" name="email" required type="email" placeholder="Insira o email" />
            </p>

            <p>
                <label for="telefone">Telefone:</label>
                <input id="telefone" name="telefone" required type="text" placeholder="1234" />
            </p>
        </div>

        <div class="grid-info">
            <h2>Endereço:</h2>
            <p></p>
            <p></p>
            <p></p>
            
            <p class="rua">
                <label class="rua-aluno" for="rua_cad">Rua:</label>
                <input class="cad-input" id="rua" name="rua" required type="text" placeholder="Insira a rua" />
            </p>

            <p class="bairro">
                <label class="bairro-aluno" for="rua_cad">Bairro:</label>
                <input class="cad-input" id="bairro" name="bairro" required type="text" placeholder="Insira o bairro" />
            </p>

            <p class="numero">
                <label class="numero-aluno" for="numero_cad">Número:</label>
                <input class="nome-input" id="numero" name="numero" required type="text"
                    placeholder="Insira o número" />
            </p>

            <p class="cidade">
                <label class="cidade-aluno" for="cidade_cad">Cidade:</label>
                <input class="nome-input" id="cidade" name="cidade" required type="text"
                    placeholder="Insira a cidade" />
            </p>

            <p class="estado">
                <label class="estado-aluno" for="nome_cad">UF:</label>
                <input class="nome-input" id="estado" name="estado" required type="text"
                    placeholder="Insira o estado" />
            </p>

            <p class="cep">
                <label class="cep-aluno" for="cep_cad">CEP:</label>
                <input class="nome-input" id="cep" name="cep" required type="text"
                    placeholder="Insira o cep" />
            </p>
        </div>

        <input type="hidden" name="novo_aluno" value="1">

        <p>
            <input class="btn btn-secondary btn-cadastrar-submit" style="background-color: #343a40;" type="submit"
                value="Cadastrar aluno" />
        </p>
    </form>
</div>